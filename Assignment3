package strings;

public class Assignment3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String sentence = "This isn't a very good sentence";
	 countChar();	
	}
		
		 public static void countChar() {
		        String string = "This isn't a very good sentence";
		        int counters[] = new int[256]; // assuming you would use only ASCII chars
		        for (final char c : string.toCharArray())
		        {   if(c!=' ')
		            counters[c]++;
		        }
		        int maxCounter = 0;
		        for (final int counter : counters)
		        {
		            if (maxCounter < counter)
		            {
		                maxCounter = counter;
		            }
		        }
		        for (int i = 0; i < counters.length; i++)
		        {
		            if (counters[i] == maxCounter)
		            {
		                System.out.printf("%c has %d occurences.\n", i, counters[i]);
		            }
		        }
		    }
		}
